# Supabase Configuration
# Copy this file to .env and fill in your actual values
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Production Domain (for QR codes and invoice links)
# Set this to your production domain (e.g., https://travel.asenaytech.com)
# Leave empty in development - will use current origin automatically
VITE_APP_URL=https://travel.asenaytech.com

# Development Mode: Set to 'true' to enable auto-login (for local development only)
# Authentication is automatically enabled with auto-login in development mode
# Set this to 'false' to disable auto-login and use manual login
VITE_DISABLE_AUTH=true

# Development Auto-Login Credentials (only used when VITE_DISABLE_AUTH=true)
# These credentials will be used to automatically log in when no session exists
VITE_DEV_EMAIL=henokasenay100@gmail.com
VITE_DEV_PASSWORD=Henok100

# Backend API Server Configuration
API_PORT=3001

# Supabase Service Role Key (for server-side operations, bypasses RLS)
# Get this from Supabase Dashboard > Settings > API > service_role key
# ⚠️ NEVER expose this key in frontend code or commit it to git
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Development Organization ID (used for unauthenticated requests)
DEV_ORGANIZATION_ID=e17ed5ec-a533-4803-9568-e317ad1f9b3f

# OpenAI API key for OCR/vision parsing of bank statements
VITE_OPENAI_API_KEY=your_openai_key

# Amadeus credentials (server-side only; do NOT expose to frontend)
AMADEUS_HOST=https://test.api.amadeus.com
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
AMADEUS_TIMEOUT_MS=10000